<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".CalendarItemEditFragment"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20dp"
        android:text="@string/calender_item_title"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/worst"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/emotion1"
            android:layout_margin="5dp"
            />

        <Button
            android:id="@+id/bad"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/emotion2"
            android:layout_margin="5dp" />

        <Button
            android:id="@+id/soso"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/emotion3"
            android:layout_margin="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/good"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/emotion4"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp" />

        <Button
            android:id="@+id/best"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/emotion5"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp" />
    </LinearLayout>



</LinearLayout>