<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WaveSoundSolution">


    <ImageView
        android:id="@+id/waveImg"
        android:layout_width="wrap_content"
        android:layout_height="540dp"
        android:src="@drawable/ocean2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/wave_playBtn"
        android:layout_width="180dp"
        android:layout_height="55dp"
        android:layout_marginTop="-45dp"
        android:background="#B8D2F1"
        android:text="PLAY/STOP â™¬"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/waveImg" />

</androidx.constraintlayout.widget.ConstraintLayout>